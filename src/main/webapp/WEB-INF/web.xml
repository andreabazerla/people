<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app id="WebApp">

	<display-name>People</display-name>

	<filter>
		<filter-name>Filters</filter-name>
		<filter-class>com.andreabazerla.filter.Filters</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Filters</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>people</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>people</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<error-page>
		<error-code>404</error-code>
		<location>/jsp/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/jsp/error.jsp</location>
	</error-page>
	<error-page>
		<exception-type>com.andreabazerla.exception.PeopleException</exception-type>
		<location>/jsp/error.jsp</location>
	</error-page>
	

</web-app>